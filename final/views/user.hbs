<h2>{{username}}'s Images</h2>
{{#if showForm}}
<p>Add a Listing...</p>
<form method="POST" action="/image/create">
Image URL: <input type="url" name="url" value="">
Price: <input name="price">
Address:<input name = "address">
<input type="hidden" name="createdBy" value="{{username}}"">
<input type="submit">
</form>
{{/if}}
{{#each images}}
<img src="{{url}}">
{{/each}}
{{#each listings}}
<p> {{address}}</p>
{{/each}}

<table class = "table table-bordered table-hover"> 
<thead>
	<tr>
		<th> Images</th>
		<th> Price Range </th>
		<th> Address</th>
		<th>Posted By</th>
	</tr>
<tbody>
{{#each listings}}
 <tr> 
 	<td> <img src="{{this.image.url}}"> </td>
 	<td> {{this.price}}</td>
 	<td>{{this.address}}</td> 
 	<td> {{this.createdBy}}</td>
 </tr>
{{/each}}
</tbody>
</table>